<div class='container mar-top-100'>
  <div class='form-container'>
    <h2 class='text-center'>Sign in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, required: false, autofocus: true, label: false, input_html: { class: 'form-control', placeholder: 'Email address' }%>
      <%= f.input :password, required: false, label: false, input_html: { class: 'form-control', placeholder: 'Password' } %>

      <div class='row'>
        <div class='col-md-5 align-middle'>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class='col-md-7 text-right'>
          <%= f.button :submit, 'Sign in', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

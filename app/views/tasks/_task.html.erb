<% tasks.each do |task| %>
	<div id='<%= task.sortable_id %>' data-task-id='<%= task.id %>' class='row pad-top-8 task row-task <%= task.status %>'>
		<div class='col-md-9'>
			<%= check_box_tag 'status', value = task.status, checked = task.completed?, options = { id: "checked_#{task.id}", class: "checkbox-status-#{task.status}" } %>
			<%= label_tag "checked_#{task.id}", "#{task.title}", class: 'completed-action title' %>
		</div>
		<div class='col-md-3'>
  		<%= link_to 'Edit', edit_task_path(task), class: 'action' %>
  		<%= link_to 'Delete', task_path(task), method: :delete, remote: true,  data: {confirm: 'Are you sure?'}, class: 'action delete-action' %>
		</div>
	</div>
<% end %>
